{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "rootDir": "./src/scripts",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/scripts/**/*.ts"],
  "exclude": ["node_modules"]
}
